<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="110px"
        android:layout_marginLeft="30dp"
        android:background="@drawable/language_kid"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="4"
        android:padding="10dp"
        android:columnCount="2">

        <ImageView android:src="@drawable/biologia"
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_gravity="center"/>

        <ImageView android:src="@drawable/quimica"
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_gravity="center"/>

        <ImageView android:src="@drawable/titulo"
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_gravity="center"/>

        <ImageView android:src="@drawable/matematica"
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_gravity="center"/>

        <ImageView android:src="@drawable/fisica"
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_gravity="center"/>

        <ImageView android:src="@drawable/noct"
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_gravity="center"/>

        <ImageView android:src="@drawable/computacion"
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_gravity="center"/>

        <ImageView android:src="@drawable/genetica"
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:layout_gravity="center"/>
    </GridLayout>
</LinearLayout>